<style>
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    /* background-size: 400%; */
    background-position: 0%;
  }

  .main-content {
    margin: auto;
    font-size: medium;
    /* font-size: 4vw; */
    display: flex;
    flex-direction: column;
    justify-content: center;
    max-width: 95%;
    gap: 1rem;
    width: max-content;
  }
  .flexrow {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 1rem;
  }
  .pfp {
    width: 3.5rem;
    height: 3.5rem;
    border-radius: 1rem;
    object-fit: cover;
  }
  .small-circle {
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    object-fit: cover;
    display: inline;
  }
  .flex-col-left {
    display: flex;
    flex-direction: column;
  }
  .flex-col-center {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .text-large {
    font-size: large;
    font-weight: bold;
  }
  .text-small {
    font-size: small;
  }
  @media screen and (min-width: 636px) {
    .text-large {
      font-size: x-large;
      font-weight: bold;
    }
    .text-small {
      font-size: medium;
    }
    .flexrow {
      /* margin-top: 1.25rem; */
      /* margin-bottom: 0.5rem; */
      gap: 1rem;
    }
    .main-content {
      margin-left: 1.5rem;
      margin-right: 1.5rem;
      font-size: 1.1rem;
      /* max-width: 30em; */
      /* max-width: var(--content-width-medium); THIS WAS CAUSING MASSIVE PROBLEMS w RESPONSIVENESS */
    }
  }
  .emphasis-low {
    color: black;
    opacity: 0.6;
  }
</style>
