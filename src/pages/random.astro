---
import Layout from "@/layouts/Layout.astro";
import Main from "@/components/Main.astro";

const apps = [
  {
    title: "Snap Judgment",
    description:
      "A game to help when you have decision paralysis. Upload photos, choose winners.",
    url: "/random/decision-helper",
    image: "/public/random/decision-helper.png",
  },
  {
    title: "Project L",
    description: "Placeholder square rectangle rectangle circle.",
    url: "#",
  },
  // {
  //   title: "Project A",
  //   description: "Still cooking.",
  //   url: "#",
  // },
  // {
  //   title: "Project T",
  //   description: "Rectangle rectangle circle.",
  //   url: "#",
  // },
];
---

<Layout title="Random">
  <Main>
    <div class="header-container">
      <p class="text-base">A collection of small experiments and utilities.</p>
    </div>

    <div class="w-full max-w-5xl mx-auto p-4 py-8">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          apps.map((app) => (
            <a
              href={app.url}
              class="group relative flex flex-col bg-white border border-gray-100 rounded-2xl overflow-hidden hover:border-gray-300 hover:shadow-sm transition-all duration-300"
            >
              {/* Media area with fixed aspect ratio */}
              <div class="aspect-[16/9] bg-gray-50 flex items-center justify-center border-b border-gray-50 group-hover:bg-gray-100/50 transition-colors">
                <img
                  src={app.image || "/public/random/placeholder.png"}
                  alt={app.title}
                  class="w-full h-full object-cover"
                />
              </div>

              {/* Text content allowed to grow as needed */}
              <div class="p-4 bg-white flex-grow flex flex-col justify-center">
                <h2 class="text-base font-medium mb-1 group-hover:text-black transition-colors">
                  {app.title}
                </h2>
                <p class="text-sm text-gray-500 leading-normal">
                  {app.description}
                </p>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </Main>
</Layout>

<style>
  h2 {
    font-family: georgia, "times new roman", serif;
  }

  .header-container {
    text-align: center;
    margin-bottom: 0.5rem;
  }

  .header-container p {
    font-style: italic;
    color: #666;
    margin-bottom: 0;
  }
</style>
