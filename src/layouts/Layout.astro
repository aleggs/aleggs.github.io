---
import HeaderBar from "../components/HeaderBar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#DEDEDE" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <HeaderBar />
    <main>
      <slot />
    </main>
  </body>

  <style is:global>
    :root {
      --theme: "gold";
      --accent: #ffe77a;
      --accent-light: #fff0a0;
      --accent-header: gainsboro;
      --accent-slightly-darker: #ffe671;
      --accent-dark: #ffd30e;
      --accent-cursor: #ffe671;
      --accent-gradient: linear-gradient(
        45deg,
        var(--accent),
        var(--accent-light),
        white 90%
      );
      --content-width: 780px;
      --content-width-small: 560px;
      --content-width-medium: 700px;
    }

    /* :root {
      --theme: "jade";
      --accent: #bddaca;
      --accent-light: #d7e9de;
      --accent-header: #d7e9de;
      --accent-slightly-lighter: #c7e0d1;
      --accent-slightly-darker: #88be9e;
      --accent-dark: #569e74;
      --accent-cursor: white;
      --accent-gradient: linear-gradient(
        45deg,
        var(--accent),
        var(--accent-light),
        white 90%
      );
    } */
    html {
      font-family: system-ui, sans-serif;
      background: white;
      background-size: 224px;
      height: 100%;
    }
    body {
      padding-top: 3rem;
    }
    code {
      font-family:
        Menlo,
        Monaco,
        Lucida Console,
        Liberation Mono,
        DejaVu Sans Mono,
        Bitstream Vera Sans Mono,
        Courier New,
        monospace;
    }
    svg.trail {
      position: fixed;
      top: 0;
      left: 0;
      z-index: 1000;
      pointer-events: none;
    }
    svg.trail path {
      fill: none;
      stroke: var(--accent);
      stroke-width: 2px;
      stroke-linecap: round;
      stroke-linejoin: round;
      pointer-events: none;
    }
    main {
      margin: 16px;
      min-width: 70%;
      color: black;
      font-size: 1.25rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
      visibility: visible;
      position: relative;
      height: calc(100% - 3rem);
    }
    @media screen and (min-width: 636px) {
      main {
        margin: auto;
        margin-top: 2rem;
      }
      .text-large {
        font-size: x-large;
        font-weight: bold;
      }
      .text-small {
        font-size: medium;
      }
    }
    @media screen and (min-width: 1236px) {
      main {
        max-width: 65%;
      }
    }
  </style>
</html>
